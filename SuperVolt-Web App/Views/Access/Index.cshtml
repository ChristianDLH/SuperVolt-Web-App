
@model List<SuperVolt_Web_App.Models.WS.ListContadoresResponse>
@{
    Layout = "~/Views/Shared/app.cshtml";
}

<div class="container-fluid container-width">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Library</li>
        </ol>
    </nav>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>CONT NO.</th>
                <th>TIPO</th>
                <th>PROPIETARIO</th>
                <th>DIRECCION</th>
                <th>OBSERVACIONES</th>
                <th>ESTADO</th>
                <th>ACCIONES</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var listaContadores in Model)
            {
                <tr>
                    <td style="text-align: center">@listaContadores.IdContador</td>
                    <td>@listaContadores.TipoContador</td>
                    <td>@listaContadores.PropietarioContador</td>
                    <td>@listaContadores.DireccionContador</td>
                    <td class=@((listaContadores.Observaciones != "Ninguna")? "text-danger":"")>@listaContadores.Observaciones</td>
                    <td>
                        @((listaContadores.Estado  == true) ? "Activo" : "Inactivo")
                    </td>
                    <td>
                        <a href=@Url.Action("", "", new { contador = listaContadores.IdContador }) class="btn btn-success btn-sm"><i class="fas fa-calculator" style="margin-right: 10px"></i>Medir</a>
                        <a href=@Url.Action("", "") class="btn btn-info btn-sm"><i class="fas fa-eye" style="margin-right: 10px"></i>Ver</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

